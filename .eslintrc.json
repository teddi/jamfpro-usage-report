{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "globals": {
        "PropertiesService": "readonly",
        "SpreadsheetApp": "readonly",
        "UrlFetchApp": "readonly",
        "Utilities": "readonly"
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"],
        "no-unused-vars": "off",
        "no-undef": "off"
    }
}
